<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout android:id="@+id/main_buttons"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true" 
	android:paddingTop="7dip"
    >
	<Button android:id="@+id/new_run"
	    android:layout_width="fill_parent" 
	    android:layout_height="?android:attr/listPreferredItemHeight"
	    android:text="@string/doc_new_session"
	    android:textAppearance="?android:attr/textAppearanceMedium"	    
	    />
</LinearLayout>
<FrameLayout
	android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_above="@id/main_buttons"
	android:background="@drawable/masks_gradient" android:layout_marginLeft="5dip" android:layout_marginRight="5dip">
	<ImageView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:src="@drawable/red_masks"
		android:scaleType="center"
	/>
	<ListView android:id="@+id/run_list"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:background="#7F000000"
	/>
	<TextView android:id="@+id/no_sessions"
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent"
	    android:gravity="center"
	    android:paddingLeft="7dip"
		android:paddingRight="7dip"
		android:background="#7F000000"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	/>
</FrameLayout>
</RelativeLayout>
